<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.giann_000.robox_official.buttonActivity"
    android:orientation="vertical"
    android:gravity="center|top">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="FASTER"
            android:id="@+id/fasterbttn" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="up"
            android:id="@+id/upbttn" />

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="SLOWER"
            android:id="@+id/slowerbttn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="U-TURN LEFT"
            android:id="@+id/UturnLbtnn" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="LEFT"
            android:id="@+id/leftbttn" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="STOP"
            android:id="@+id/stopbtnn" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="RIGHT"
            android:id="@+id/rightbttn" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="u-TURN RIGHT"
            android:id="@+id/UturnRbttn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="DOWN"
            android:id="@+id/downbttn" />
    </LinearLayout>
</LinearLayout>

